<div class="container">
    <div class="row">
        <div class="col-sm-offset-3">
        </div>
        <div class="col-sm-2">
            <%= link_to 'Login', login_path, class:"btn btn-primary" %>
        </div>
    </div>
</div>
<div class="simple-login-container">
    <%= render 'shared/error_messages' %>
    <h2>Create new account</h2>
        <%= form_with(model: @user, local: true) do |f| %>
            <div class="row">
                <div class="col-md-12 form-group">
                    <%= f.text_field :name, class:"form-control", placeholder:"Your name"%>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <%= f.text_field :search_id, class:"form-control", placeholder:"Your ID"%>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <%= f.email_field :email, class:"form-control", placeholder:"Email"%>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <%= f.password_field :password, class:"form-control", placeholder:"Password"%>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Password confirmation"%>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <%= f.submit 'Create new account', class:"btn btn-primary"%>
                </div>
            </div>
        <% end %>
</div>