<% @other_user = user %>

<% if findRoom %>
    <%= link_to 'トーク', room_path(findRoom), class:'talk_button', data: {"turbolinks" => false} %>
<% else %>
    <%= form_with(url: rooms_path, method: :post, local: true) do |f| %>
        <%= f.hidden_field :other_user_id, :value => user.id %>
        <%= f.submit 'トークルームを作成', id:'createTalk', class:'create_talk' %>
    <% end %>
<% end %>